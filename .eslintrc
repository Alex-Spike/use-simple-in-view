{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "operator-linebreak": 0,
    "comma-dangle": "off",
    "object-curly-newline": "off"
  },
  "overrides": [
    {
      "files": [
        "*.spec.js"
      ],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}